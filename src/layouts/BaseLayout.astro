---
// BaseLayout.astro - Main layout with SEO and schema.org
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  schemaType?: 'Article' | 'BlogPosting' | 'WebPage' | 'CollectionPage';
  publishedDate?: string;
  modifiedDate?: string;
  author?: string;
  noindex?: boolean;
}

const {
  title,
  description = 'MyDojo Software - The complete martial arts management platform for dojos, karate schools, and MMA gyms. Streamline scheduling, billing, and student management.',
  image = '/images/og-default.jpg',
  type = 'website',
  schemaType,
  publishedDate,
  modifiedDate,
  author = 'MyDojo Team',
  noindex = false
} = Astro.props;

// Determine the schema type to use
const resolvedSchemaType = schemaType || (type === 'article' ? 'Article' : 'WebPage');

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle = title === 'Home' ? 'MyDojo Software - Martial Arts Management Platform' : `${title} | MyDojo Software`;

// Schema.org JSON-LD
const schemaOrg = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://mydojo.software/#organization",
      "name": "MyDojo Software",
      "url": "https://mydojo.software",
      "logo": {
        "@type": "ImageObject",
        "url": "https://mydojo.software/logo.svg",
        "width": 200,
        "height": 60
      },
      "sameAs": []
    },
    {
      "@type": "WebSite",
      "@id": "https://mydojo.software/#website",
      "url": "https://mydojo.software",
      "name": "MyDojo Software",
      "publisher": {
        "@id": "https://mydojo.software/#organization"
      }
    },
    {
      "@type": resolvedSchemaType,
      "@id": canonicalURL.href,
      "url": canonicalURL.href,
      "name": title,
      "headline": title,
      "description": description,
      "isPartOf": {
        "@id": "https://mydojo.software/#website"
      },
      ...((resolvedSchemaType === 'Article' || resolvedSchemaType === 'BlogPosting') && {
        "author": {
          "@type": "Person",
          "name": author,
          "url": "https://mydojo.software/about/"
        },
        "publisher": {
          "@id": "https://mydojo.software/#organization"
        }
      }),
      ...(image && (resolvedSchemaType === 'Article' || resolvedSchemaType === 'BlogPosting') && {
        "image": {
          "@type": "ImageObject",
          "url": new URL(image, Astro.site).href
        }
      }),
      ...(publishedDate && { "datePublished": publishedDate }),
      ...(modifiedDate && { "dateModified": modifiedDate })
    }
  ]
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- Primary Meta Tags -->
  <title>{fullTitle}</title>
  <meta name="title" content={fullTitle} />
  <meta name="description" content={description} />
  {noindex && <meta name="robots" content="noindex, nofollow" />}
  
  <!-- Canonical -->
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, Astro.site)} />
  <meta property="og:site_name" content="MyDojo Software" />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={fullTitle} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={new URL(image, Astro.site)} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />

  <!-- Google Analytics - Conditional Loading Based on Cookie Consent -->
  <script is:inline>
    (function() {
      // Check if user has accepted cookies
      try {
        const consent = localStorage.getItem('cookieConsent');
        if (consent) {
          const consentData = JSON.parse(consent);
          if (consentData.accepted === true) {
            // Load Google Analytics
            const script = document.createElement('script');
            script.async = true;
            script.src = 'https://www.googletagmanager.com/gtag/js?id=G-WSS89NS2ZN';
            document.head.appendChild(script);

            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-WSS89NS2ZN');
          }
        }
      } catch (error) {
        console.error('Error loading analytics:', error);
      }
    })();
  </script>
</head>
<body class="min-h-screen flex flex-col">
  <Navigation />
  
  <main class="flex-grow pt-16 md:pt-20">
    <slot />
  </main>
  
  <Footer />
  <CookieConsent />
</body>
</html>
