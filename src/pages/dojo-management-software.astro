    font-size: 1.5rem;
    font-weight: 700;
    color: var(--brand-navy);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose p {
    margin-bottom: 1.5rem;
    color: #475569;
    line-height: 1.7;
  }

  .prose ul {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
    color: #475569;
  }

  .prose strong {
    color: var(--brand-navy);
    font-weight: 600;
  }

  .prose a {
    color: var(--brand-red);
    text-decoration: none;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .btn-primary-large,
  .btn-secondary-large {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary-large:hover,
  .btn-secondary-large:hover {
    transform: translateY(-2px);
  }

  .btn-secondary-large {
    border: 2px solid;
  }

  @media (max-width: 768px) {
    .section {
      padding: 3rem 0;
    }

    .prose h2 {
      font-size: 1.5rem;
    }

    .prose h3 {
      font-size: 1.25rem;
    }
  }
</style>
