  <section class="section bg-navy text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready to Automate Your Scheduling?
        </h2>
        <p class="text-xl mb-8 text-gray-300">
          Reduce no-shows by 58%, save 12+ hours weekly, and give students the self-service booking they expect. Start your free trial today.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/contact/" class="btn-primary">Start Free Trial</a>
          <a href="/pricing/" class="btn-secondary bg-white text-navy hover:bg-gray-100">View Pricing</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

