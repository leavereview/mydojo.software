    .section {
      padding: 6rem 0;
    }
  }

  .prose {
    color: #1a1a2e;
  }

  .prose h2 {
    color: #1a1a2e;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }

  .prose a {
    color: #e94560;
    text-decoration: none;
  }

  .prose a:hover {
    text-decoration: underline;
