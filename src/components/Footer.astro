---
// Footer.astro
const currentYear = new Date().getFullYear();

const footerLinks = {
  software: [
    { label: 'Martial Arts Software', href: '/martial-arts-software/' },
    { label: 'Dojo Management', href: '/dojo-management-software/' },
    { label: 'Karate School Software', href: '/karate-school-software/' },
    { label: 'BJJ Gym Software', href: '/bjj-gym-software/' },
    { label: 'MMA Gym Software', href: '/mma-gym-software/' },
    { label: 'Martial Arts CRM', href: '/martial-arts-crm/' },
    { label: 'Scheduling Software', href: '/martial-arts-scheduling-software/' },
    { label: 'Billing Software', href: '/martial-arts-billing-software/' },
  ],
  resources: [
    { label: 'Blog', href: '/blog/' },
    { label: 'Revenue Calculator', href: '/dojo-revenue-calculator/' },
    { label: 'Pricing', href: '/pricing/' },
    { label: 'About Us', href: '/about/' },
    { label: 'Contact', href: '/contact/' },
  ],
  legal: [
    { label: 'Privacy Policy', href: '/privacy-policy/' },
    { label: 'Terms of Service', href: '/terms/' },
  ]
};
---

<footer class="bg-brand-navy text-white">
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-6">
          <img src="/logo.svg" alt="MyDojo" class="h-10 brightness-0 invert" />
        </a>
        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          The complete martial arts management platform. Streamline your dojo operations with powerful scheduling, billing, and student management tools.
        </p>
        <div class="flex gap-4">
          <a href="https://www.linkedin.com/in/johnpowellpm/" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Software Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">Software</h3>
        <ul class="space-y-3">
          {footerLinks.software.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">Resources</h3>
        <ul class="space-y-3">
          {footerLinks.resources.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter / CTA -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">Get Started</h3>
        <p class="text-gray-400 text-sm mb-4">
          Ready to transform your martial arts school? Start your free trial today.
        </p>
        <a href="/contact/" class="btn-primary text-sm">
          Start Free Trial
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-800 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-400 text-sm">
        &copy; {currentYear} MyDojo Software. All rights reserved.
      </p>
      <div class="flex gap-6">
        {footerLinks.legal.map((link) => (
          <a href={link.href} class="text-gray-400 hover:text-white transition-colors text-sm">
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
