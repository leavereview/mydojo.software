---
// Navigation.astro - Main navigation with dropdowns
const currentPath = Astro.url.pathname;

const navLinks = [
  { label: 'Home', href: '/' },
  {
    label: 'Software',
    href: '/martial-arts-software/',
    dropdown: [
      { label: 'Martial Arts Software', href: '/martial-arts-software/' },
      { label: 'Dojo Management', href: '/dojo-management-software/' },
      { label: 'Karate School Software', href: '/karate-school-software/' },
      { label: 'BJJ Gym Software', href: '/bjj-gym-software/' },
      { label: 'MMA Gym Software', href: '/mma-gym-software/' },
      { label: 'Martial Arts CRM', href: '/martial-arts-crm/' },
      { label: 'Scheduling Software', href: '/martial-arts-scheduling-software/' },
      { label: 'Billing Software', href: '/martial-arts-billing-software/' },
      { label: 'divider', href: '#', isDivider: true },
      { label: 'ðŸ“Š Revenue Calculator', href: '/dojo-revenue-calculator/' },
    ]
  },
  { label: 'Pricing', href: '/pricing/' },
  { label: 'Blog', href: '/blog/' },
  { label: 'About', href: '/about/' },
  { label: 'Contact', href: '/contact/' },
];

function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100">
  <div class="container-custom">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <img src="/logo.svg" alt="MyDojo" class="h-8 md:h-10 transition-transform group-hover:scale-105" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map((link) => (
          <div class="relative group">
            <a 
              href={link.href}
              class:list={[
                'px-4 py-2 rounded-lg font-medium transition-all duration-200',
                isActive(link.href)
                  ? 'text-brand-red bg-brand-red-light'
                  : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'
              ]}
            >
              {link.label}
              {link.dropdown && (
                <svg class="inline-block w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>
            
            {link.dropdown && (
              <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                <div class="bg-white rounded-xl shadow-lg border border-gray-100 py-2 min-w-[220px]">
                  {link.dropdown.map((item) => (
                    item.isDivider ? (
                      <div class="border-t border-gray-200 my-2"></div>
                    ) : (
                      <a
                        href={item.href}
                        class:list={[
                          'block px-4 py-2 text-sm transition-colors',
                          isActive(item.href)
                            ? 'text-brand-red bg-brand-red-light'
                            : 'text-gray-600 hover:text-brand-red hover:bg-gray-50'
                        ]}
                      >
                        {item.label}
                      </a>
                    )
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="/contact/" class="btn-primary text-sm">
          Get Started Free
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        type="button" 
        class="md:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100"
        id="mobile-menu-btn"
        aria-label="Open menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-4 py-4 bg-white border-t border-gray-100 shadow-lg">
      {navLinks.map((link) => (
        <div>
          <a 
            href={link.href}
            class:list={[
              'block px-4 py-3 rounded-lg font-medium',
              isActive(link.href)
                ? 'text-brand-red bg-brand-red-light'
                : 'text-gray-600 hover:bg-gray-50'
            ]}
          >
            {link.label}
          </a>
          {link.dropdown && (
            <div class="ml-4 border-l-2 border-gray-100">
              {link.dropdown.map((item) => (
                item.isDivider ? (
                  <div class="border-t border-gray-200 my-2 ml-4"></div>
                ) : (
                  <a
                    href={item.href}
                    class:list={[
                      'block px-4 py-2 text-sm',
                      isActive(item.href)
                        ? 'text-brand-red'
                        : 'text-gray-500 hover:text-brand-red'
                    ]}
                  >
                    {item.label}
                  </a>
                )
              ))}
            </div>
          )}
        </div>
      ))}
      <div class="mt-4 px-4">
        <a href="/contact/" class="btn-primary w-full text-center">
          Get Started Free
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
